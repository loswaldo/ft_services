server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html;

	return 301 https://localhost$request_uri;

	server_name _;
}

server {
	listen 443 ssl default_server;
 	listen [::]:443 ssl default_server;
	ssl on;
	
	ssl_certificate /etc/nginx/sites-available/ssl/nginx.crt;
	ssl_certificate_key /etc/nginx/sites-available/ssl/nginx.key;

	index index.php index.html index.htm;

	server_name _;

	root /var/www/html;

	location / {
		autoindex on;
		try_files $uri $uri/ =404;
	}
	
	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php7.3-fpm.sock;
	}
}